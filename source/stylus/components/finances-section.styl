.finances-section
  background-image: url('../images/finances-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #0E0908

  &__container
    position relative
    z-index 1
    padding 0 0 20px
    text-align: center
    +above($breakpoints.sm)
      padding 0 0 30px
    +above($breakpoints.md)
      padding 0 0 50px
    +above($breakpoints.xxl)
      padding 0 0 71px

  &__block
    width 100%
    background-color #292929
    padding 20px 0 5px
    border-radius: 10px
    +above($breakpoints.sm)
      padding 30px 0
      border-radius: 20px
    +above($breakpoints.md)
      padding 50px 0
      border-radius: 25px
    +above($breakpoints.xxl)
      padding 80px 0
      border-radius: 30px

  &__title
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 20px
    +above($breakpoints.md)
      padding-bottom 30px
    +above($breakpoints.xxl)
      padding-bottom 44px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 15px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 30px

  &__card-wrapper
    position relative
    z-index 1
    width 280px !important
    height: 90px
    +above($breakpoints.sm)
      width 200px !important
      height: 100px
    +above($breakpoints.md)
      width: 270px !important;
      height: 125px
    +above($breakpoints.xxl)
      width 320px !important
      height: 150px
    &:after
      content: ""
      position: absolute
      z-index -1
      width 100%
      height: 100%
      background-color $color-l-blue
      top: 2px
      left: 2px
      clip-path: polygon(0 0, 100% 0, 100% calc(100% - 21px), calc(100% - 21px) 100%, 0 100%)
      +above($breakpoints.sm)
        top: 3px
        left: 3px
      +above($breakpoints.md)
        clip-path: polygon(0 0, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%)
        top: 4px
        left: 4px

  &__card
    width 100%
    height: 100%
    background-color #1C1C1C
    clip-path: polygon(0 0, 100% 0, 100% calc(100% - 20px), calc(100% - 20px) 100%, 0 100%)
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    gap: 2px
    +above($breakpoints.md)
      clip-path: polygon(0 0, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%)

  &__bottom
    width 100%
    margin-top 15px
    display: flex
    flex-direction: column
    align-items: center
    +above($breakpoints.sm)
      margin-top 30px
    +above($breakpoints.md)
      margin-top 50px
    +above($breakpoints.xxl)
      margin-top 70px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin 10px 0 5px
    +above($breakpoints.sm)
      flex-direction: row
      justify-content center
      gap: 6px
      margin 15px 0 12px
    +above($breakpoints.md)
      gap: 7px
      margin 18px 0 15px
    +above($breakpoints.xxl)
      gap: 8px
      margin 22px 0 18px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 190px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 274px !important
