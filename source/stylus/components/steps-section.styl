.steps-section
  background-image: url('../images/steps-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #0E0908

  &__container
    position relative
    z-index 1
    padding 0 0 120px
    +above($breakpoints.sm)
      padding 0 0 50px
    +above($breakpoints.md)
      padding 0 0 70px
    +above($breakpoints.xxl)
      padding 0 0 107px

  &__img-1
    position: absolute
    z-index -1
    width: 138px;
    height: auto;
    top: 360px;
    right: 169px;
    +above($breakpoints.sm)
      width: 310px;
      top: 0;
      right: -36px;
    +above($breakpoints.md)
      width: 415px;
      right: -53px;
    +above($breakpoints.xxl)
      width 522px
      right: -65px

  &__img-2
    position: absolute
    z-index -1
    width: 182px;
    height: auto;
    bottom: 0;
    right: -17px;
    +above($breakpoints.sm)
      width: 390px;
      bottom: 0;
      right: 10px;
    +above($breakpoints.md)
      width: 500px;
      right: 20px;
    +above($breakpoints.xxl)
      width 664px
      right: 26px

  &__title,
  &__bottom
    text-align: center
    +above($breakpoints.sm)
      text-align: start

  &__title
    padding-bottom 15px
    +above($breakpoints.sm)
      padding-bottom 30px
    +above($breakpoints.md)
      padding-bottom 40px
    +above($breakpoints.xxl)
      padding-bottom 58px

  &__cards
    +above($breakpoints.sm)
      display: flex
      flex-wrap: wrap
      justify-content center
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__card
    position relative
    width 280px !important
    height: 120px
    background-color #1C1C1C
    box-shadow: 2px 2px 0 0 #00CEEE
    display: flex
    flex-direction: column
    gap: 10px
    padding: 20px 5px 15px 30px;
    +above($breakpoints.sm)
      box-shadow: 3px 3px 0 0 #00CEEE
      width: 174px !important;
      height: 105px
      gap: 15px
      padding 15px 5px 15px 15px
    +above($breakpoints.md)
      box-shadow: 4px 4px 0 0 #00CEEE
      width: 230px !important;
      height: 140px
      gap: 20px
      padding 20px 5px 20px 17px
    +above($breakpoints.xxl)
      width 280px !important
      height: 165px
      gap: 22px
      padding 26px 5px 26px 26px

  &__card-icon
    position: absolute
    width 20px
    height: 20px
    top: 17px;
    right: 17px;
    +above($breakpoints.sm)
      width: 18px;
      height: 18px;
      top: 15px;
      right: 15px;
    +above($breakpoints.md)
      width 22px
      height: 22px
      top: 17px
      right: 17px
    +above($breakpoints.xxl)
      width 24px
      height: 24px
      top: 26px
      right: 26px

  &__bottom
    display: flex
    flex-direction: column
    align-items: center
    gap: 15px
    +above($breakpoints.sm)
      align-items: flex-start
      gap: 20px
      margin-top 30px
    +above($breakpoints.md)
      gap: 25px;
      margin-top 40px
    +above($breakpoints.xxl)
      gap: 33px
      margin-top 62px

  &__btn
    width 280px !important
    +above($breakpoints.sm)
      width 230px !important
    +above($breakpoints.md)
      width 300px !important
    +above($breakpoints.xxl)
      width 332px !important
