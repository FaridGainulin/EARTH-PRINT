.about-section
  background-image: url('../images/about-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #0E0908

  &__container
    position relative
    z-index 1
    padding: 20px 0 40px
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 30px 0 50px
    +above($breakpoints.md)
      padding 50px 0 90px
    +above($breakpoints.xxl)
      padding 69px 0 136px

  &__sub-title
    display: none
    +above($breakpoints.sm)
      display: block
      position relative
      z-index 1
      color: $color-l-blue
      margin 30px 0 15px
    +above($breakpoints.xxl)
      margin 50px 0 20px
    +above($breakpoints.xxl)
      margin 60px 0 23px
    &:after
      +above($breakpoints.sm)
        content: ""
        position: absolute
        z-index -1
        background-color $color-l-blue
        width 60px
        height: 2px
        top: 50%
        transform: translateY(-50%)
        left: 55px;
      +above($breakpoints.md)
        width 80px
        left: 76px;
      +above($breakpoints.xxl)
        width: 100px;

  &__text
    display: flex
    flex-direction: column
    gap: 7px
    padding-top 15px
    +above($breakpoints.sm)
      padding 0
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__block
    display: flex
    flex-direction: column
    align-items: center
    gap: 7px
    margin 15px 0 120px
    +above($breakpoints.sm)
      margin 20px 0 30px
      flex-direction: row
      align-items: flex-start
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
      margin 30px 0 40px
    +above($breakpoints.xxl)
      gap: 20px
      margin 40px 0 52px

  &__block-images
    display: flex
    gap: 8px
    +above($breakpoints.sm)
      gap: 10px
    +above($breakpoints.md)
      gap: 15px
    +above($breakpoints.xxl)
      gap: 20px

  &__block-img
    width 150px
    height: auto
    +above($breakpoints.sm)
      width 174px
    +above($breakpoints.md)
      width 230px
    +above($breakpoints.xxl)
      width 280px

  &__block-text-wrapper
    position relative
    z-index 1
    width 100%
    color: $color-black-text
    +above($breakpoints.sm)
      width 358px
    +above($breakpoints.md)
      width 475px
    +above($breakpoints.xxl)
      width 580px
      height: 276px
    &:after
      content: ""
      position: absolute
      z-index -1
      background-color #153EFF
      width 100%
      height: 100%
      top: 2px
      left: 2px
      clip-path: polygon(0 0, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%)
      +above($breakpoints.sm)
        top: 3px
        left: 3px
      +above($breakpoints.md)
        top: 4px
        left: 4px

  &__block-text
    width 100%
    height: 100%
    background-color $color-l-blue
    display: flex
    flex-direction: column
    gap: 7px
    padding 10px 5px
    clip-path: polygon(0 0, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%)
    +above($breakpoints.sm)
      gap: 9px
      padding 20px 5px 20px 15px
    +above($breakpoints.md)
      gap: 15px
      padding: 22px 5px 23px 22px;
    +above($breakpoints.xxl)
      gap: 20px
      padding 28px 5px 28px 28px

  &__bottom
    position relative
    display: flex
    flex-direction: column
    align-items: center
    border-radius: 10px
    padding 15px 10px
    background-color #1C1C1C
    +above($breakpoints.sm)
      align-items: flex-start
      border-radius: 20px
      padding: 25px 25px 25px 164px;
    +above($breakpoints.md)
      border-radius: 25px
      padding: 35px 35px 35px 257px;
    +above($breakpoints.xxl)
      border-radius: 30px
      padding 44px 44px 44px 289px

  &__bottom-img
    position: absolute
    width: 60px;
    height: auto;
    top: -10px;
    left: -10px;
    +above($breakpoints.sm)
      width: 124px;
      top: 35px;
      left: 25px;
    +above($breakpoints.md)
      width 190px
      top: 35px
      left: 35px
    +above($breakpoints.xxl)
      width 209px
      top: 44px
      left: 44px

  &__form
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin 10px 0 5px
    +above($breakpoints.sm)
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
      margin 15px 0 12px
    +above($breakpoints.md)
      gap: 7px
      margin 18px 0 15px
    +above($breakpoints.xxl)
      gap: 8px
      margin 22px 0 18px
    input,
    button
      width 280px !important
      +above($breakpoints.sm)
        width 175px !important
      +above($breakpoints.md)
        width 220px !important
      +above($breakpoints.xxl)
        width 277px !important

  &__img
    position: absolute
    z-index -1
    width: 200px;
    height: auto;
    top: 730px;
    right: 0px;
    +above($breakpoints.sm)
      width: 550px;
      top: 0;
      right: -150px;
    +above($breakpoints.md)
      width: 706px;
      right: -107px;
    +above($breakpoints.xxl)
      width 881px
      right -137px
