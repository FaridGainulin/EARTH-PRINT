.invest-section
  background-image: url('../images/invest-section-bg.jpg')
  background-repeat: no-repeat
  background-position: center
  background-size: cover
  background-color #0E0908

  &__container
    position relative
    z-index 1
    text-align: center
    background-color #1C1C1C
    padding 20px 0 5px
    border-radius: 10px
    +above($breakpoints.sm)
      padding 30px 0
      border-radius: 20px
    +above($breakpoints.md)
      padding 50px 0
      border-radius: 25px
    +above($breakpoints.xxl)
      padding 80px 0
      border-radius: 30px

  &__sub-title
    padding 8px 0 15px
    +above($breakpoints.sm)
      padding 8px 0 30px
    +above($breakpoints.md)
      padding 8px 0 50px
    +above($breakpoints.xxl)
      padding 8px 0 60px

  &__cards
    +above($breakpoints.sm)
      display: flex
      justify-content center
      gap: 30px
    +above($breakpoints.md)
      gap: 50px
    +above($breakpoints.xxl)
      gap: 70px

  &__card-wrapper
    position relative
    z-index 1
    width 280px !important
    height: 230px
    +above($breakpoints.sm)
      width 190px !important
      height: 220px
    +above($breakpoints.md)
      width 230px !important
      height: 260px
    +above($breakpoints.xxl)
      width 280px !important
      height: 311px
    &:after
      content: ""
      position: absolute
      z-index -1
      width 100%
      height: 100%
      clip-path: polygon(0 0, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%);
      background-color #00CEEE
      top: 2px
      left: 2px
      +above($breakpoints.sm)
        top: 3px
        left: 3px
      +above($breakpoints.md)
        top: 4px
        left: 4px

  &__card
    width 100%
    height: 100%
    background-color #292929
    clip-path: polygon(0 0, 100% 0, 100% calc(100% - 30px), calc(100% - 30px) 100%, 0 100%);
    display: flex
    flex-direction: column
    justify-content center
    align-items: center
    gap: 16px
    +above($breakpoints.sm)
      gap: 12px
    +above($breakpoints.md)
      gap: 14px
    +above($breakpoints.xxl)
      gap: 16px

  &__card-img
    width 75px
    height: auto
    +above($breakpoints.sm)
      width 70px
    +above($breakpoints.md)
      width 80px
    +above($breakpoints.xxl)
      width 94px

  &__btn
    width 200px !important
    +above($breakpoints.sm)
      width 140px !important
    +above($breakpoints.md)
      width 165px !important
    +above($breakpoints.xxl)
      width 201px !important
