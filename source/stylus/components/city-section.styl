.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #0E0908

  &__container
    position relative
    z-index 1
    text-align: center
    padding 20px 0 0
    +above($breakpoints.sm)
      text-align: start
      padding 70px 0 50px
    +above($breakpoints.md)
      padding 90px 0 70px
    +above($breakpoints.xxl)
      padding 187px 0 125px

  &__title
    position relative
    z-index 1
    &:before
      content: ""
      position: absolute
      z-index -1
      background-color $color-l-blue
      clip-path: polygon(0 0, 100% 0, 126% calc(100% - 30px), calc(100% - 30px) 160%, 0 100%);
      width: 110px;
      height: 24px;
      top: 19px;
      left: 141px;
      +above($breakpoints.sm)
        clip-path: polygon(0 0, 100% 0, 108% calc(100% - 30px), calc(100% - 30px) 110%, 0 100%);
        width: 234px;
        height: 49px;
        top: 46px;
        left: 176px;
      +above($breakpoints.md)
        clip-path: polygon(0 0, 100% 0, 102% calc(100% - 30px), calc(100% - 30px) 102%, 0 100%);
        width: 318px;
        height: 68px;
        top: 61px;
        left: 235px;
      +above($breakpoints.xxl)
        width: 366px;
        height: 72px;
        top: 75px;
        left: 274px;
    &:after
      content: ""
      position: absolute
      z-index -2
      background-color #153EFF
      clip-path: polygon(0 0, 100% 0, 126% calc(100% - 30px), calc(100% - 30px) 160%, 0 100%);
      width: 110px;
      height: 24px;
      top: 21px;
      left: 143px;
      +above($breakpoints.sm)
        clip-path: polygon(0 0, 100% 0, 108% calc(100% - 30px), calc(100% - 30px) 110%, 0 100%);
        width: 234px;
        height: 49px;
        top: 49px;
        left: 179px;
      +above($breakpoints.md)
        clip-path: polygon(0 0, 100% 0, 102% calc(100% - 30px), calc(100% - 30px) 102%, 0 100%);
        width: 318px;
        height: 68px;
        top: 65px;
        left: 239px;
      +above($breakpoints.xxl)
        width: 366px;
        height: 72px;
        top: 79px;
        left: 278px;

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 10px 0 20px
    +above($breakpoints.md)
      padding 12px 0 30px
    +above($breakpoints.xxl)
      padding 14px 0 40px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin-top 10px
    +above($breakpoints.sm)
      width 556px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
      margin-top 15px
    +above($breakpoints.md)
      gap: 7px
      margin-top 20px
    +above($breakpoints.xxl)
      gap: 8px
      margin-top 24px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 190px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 274px !important

  &__agree-wrapper
    +above($breakpoints.sm)
      padding-left 15px
    +above($breakpoints.md)
      padding-left 20px
    +above($breakpoints.xxl)
      padding-left 26px

  &__img
    width: 240px;
    height: auto;
    margin: 20px 0 0 41px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 560px;
      bottom: 0;
      right: -129px;
    +above($breakpoints.md)
      width: 720px;
      right: -151px;
    +above($breakpoints.xxl)
      width 1036px
      right: -312px
