.city-section
  background-image: url('../images/city-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #0E0908

  &__container
    position relative
    z-index 1
    text-align: center
    padding 20px 0 0
    +above($breakpoints.sm)
      text-align: start
      padding 70px 0 50px
    +above($breakpoints.md)
      padding 90px 0 70px
    +above($breakpoints.xxl)
      padding 187px 0 125px

  &__mark
    position relative
    z-index 1
    color: $color-black-text
    &:before
      content: ""
      position: absolute
      z-index -1
      background-color $color-l-blue
      clip-path: polygon(0 0, 100% 0, 100% calc(100% - 32%), calc(100% - 8%) 100%, 0 100%);
      width: 110%;
      height: 84%
      top: 0
      left: -5%;
      +above($breakpoints.sm)
        height: 81%
        top: 4%;
    &:after
      content: ""
      position: absolute
      z-index -2
      background-color #153EFF
      clip-path: polygon(0 0, 100% 0, 100% calc(100% - 32%), calc(100% - 8%) 100%, 0 100%);
      width: 110%
      height: 84%;
      top: 6%
      left: -3%
      +above($breakpoints.sm)
        height: 81%;
        top: 10%

  &__sub-title
    padding 10px 0 15px
    +above($breakpoints.sm)
      padding 10px 0 20px
    +above($breakpoints.md)
      padding 12px 0 30px
    +above($breakpoints.xxl)
      padding 14px 0 40px

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin-top 10px
    +above($breakpoints.sm)
      width 556px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
      margin-top 15px
    +above($breakpoints.md)
      gap: 7px
      margin-top 20px
    +above($breakpoints.xxl)
      gap: 8px
      margin-top 24px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 190px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 274px !important

  &__agree-wrapper
    +above($breakpoints.sm)
      padding-left 15px
    +above($breakpoints.md)
      padding-left 20px
    +above($breakpoints.xxl)
      padding-left 26px

  &__img
    width: 240px;
    height: auto;
    margin: 20px 0 0 41px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 560px;
      bottom: 0;
      right: -129px;
    +above($breakpoints.md)
      width: 720px;
      right: -151px;
    +above($breakpoints.xxl)
      width 1036px
      right: -312px
