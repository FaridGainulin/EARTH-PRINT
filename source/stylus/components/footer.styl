.footer
  background-color: #000

  &__container
    display: flex
    align-items: center
    flex-direction: column
    gap: 10px
    padding 10px 0
    +above($breakpoints.sm)
      flex-direction: row
      justify-content space-between
      padding 15px 0
    +above($breakpoints.md)
      padding 18px 0
    +above($breakpoints.xxl)
      padding 22px 0 21px

  &__brand-block
    +above($breakpoints.sm)
      display: flex
      align-items: center
      gap: 15px
    +above($breakpoints.md)
      gap: 20px
    +above($breakpoints.xxl)
      gap: 28px

  &__logo
    width 60px
    height: auto
    +above($breakpoints.sm)
      width 65px
    +above($breakpoints.md)
      width 70px
    +above($breakpoints.xxl)
      width 77px

  &__brand
    display: none
    +above($breakpoints.sm)
      display: block

  &__privacy
    cursor pointer
    text-decoration: underline
    color: #949494
