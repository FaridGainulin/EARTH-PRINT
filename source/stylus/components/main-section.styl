.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #0E0908

  &__container
    position relative
    z-index 1
    padding 10px 0 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 15px 0 70px
    +above($breakpoints.md)
      padding 18px 0 90px
    +above($breakpoints.xxl)
      padding 20px 0 150px

  &__bg-img
    position: absolute
    z-index -1
    width: 370px;
    height: auto;
    top: 123px;
    left: -27px;
    +above($breakpoints.sm)
      width: 605px;
      top: 118px;
      left: -82px;
    +above($breakpoints.md)
      width: 812px;
      top: 132px;
      left: -113px;
    +above($breakpoints.xxl)
      width 965px
      top: 143px
      left: -129px

  &__title
    position relative
    z-index 1
    padding 35px 0 15px
    +above($breakpoints.sm)
      padding 50px 0 25px
    +above($breakpoints.md)
      padding 70px 0 35px
    +above($breakpoints.xxl)
      padding 129px 0 46px
    &:before
      content: ""
      position: absolute
      z-index -1
      background-color $color-l-blue
      clip-path: polygon(0 0, 100% 0, 126% calc(100% - 30px), calc(100% - 30px) 160%, 0 100%);
      width: 110px;
      height: 24px;
      top: 54px;
      left: 195px;
      +above($breakpoints.sm)
        clip-path: polygon(0 0, 100% 0, 108% calc(100% - 30px), calc(100% - 30px) 110%, 0 100%);
        width: 234px;
        height: 49px;
        top: 146px;
        left: 193px;
      +above($breakpoints.md)
        clip-path: polygon(0 0, 100% 0, 102% calc(100% - 30px), calc(100% - 30px) 102%, 0 100%);
        width: 318px;
        height: 68px;
        top: 196px;
        left: 259px;
      +above($breakpoints.xxl)
        width: 366px;
        height: 72px;
        top: 281px;
        left: 301px;
    &:after
      content: ""
      position: absolute
      z-index -2
      background-color #153EFF
      clip-path: polygon(0 0, 100% 0, 126% calc(100% - 30px), calc(100% - 30px) 160%, 0 100%);
      width: 110px;
      height: 24px;
      top: 56px;
      left: 197px;
      +above($breakpoints.sm)
        clip-path: polygon(0 0, 100% 0, 108% calc(100% - 30px), calc(100% - 30px) 110%, 0 100%);
        width: 234px;
        height: 49px;
        top: 150px;
        left: 197px;
      +above($breakpoints.md)
        clip-path: polygon(0 0, 100% 0, 102% calc(100% - 30px), calc(100% - 30px) 102%, 0 100%);
        width: 318px;
        height: 68px;
        top: 200px;
        left: 263px;
      +above($breakpoints.xxl)
        width: 366px;
        height: 72px;
        top: 285px;
        left: 305px;

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin-top 15px
    +above($breakpoints.sm)
      width 556px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
      margin-top 20px
    +above($breakpoints.md)
      gap: 7px
      margin-top 25px
    +above($breakpoints.xxl)
      gap: 8px
      margin-top 27px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 190px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 274px !important

  &__agree-wrapper
    +above($breakpoints.sm)
      padding-left 15px
    +above($breakpoints.md)
      padding-left 20px
    +above($breakpoints.xxl)
      padding-left 26px

  &__img
    width: 240px;
    height: auto;
    margin: 10px 0 0 43px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 520px;
      bottom: 0;
      right: -130px;
    +above($breakpoints.md)
      width: 675px;
      right: -164px;
    +above($breakpoints.xxl)
      width 891px
      right: -228px
