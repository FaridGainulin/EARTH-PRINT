.main-section
  background-image: url('../images/main-section-bg.jpg')
  background-repeat: no-repeat
  background-size: cover
  background-position: center
  background-color #0E0908

  &__container
    position relative
    z-index 1
    padding 10px 0 0
    text-align: center
    +above($breakpoints.sm)
      text-align: start
      padding 15px 0 70px
    +above($breakpoints.md)
      padding 18px 0 90px
    +above($breakpoints.xxl)
      padding 20px 0 150px

  &__bg-img
    position: absolute
    z-index -1
    width: 370px;
    height: auto;
    top: 123px;
    left: -27px;
    +above($breakpoints.sm)
      width: 605px;
      top: 118px;
      left: -82px;
    +above($breakpoints.md)
      width: 812px;
      top: 132px;
      left: -113px;
    +above($breakpoints.xxl)
      width 965px
      top: 143px
      left: -129px

  &__title
    padding 35px 0 15px
    +above($breakpoints.sm)
      padding 50px 0 25px
    +above($breakpoints.md)
      padding 70px 0 35px
    +above($breakpoints.xxl)
      padding 129px 0 46px

  &__mark
    position relative
    z-index 1
    color: $color-black-text
    &:before
      content: ""
      position: absolute
      z-index -1
      background-color $color-l-blue
      clip-path: polygon(0 0, 100% 0, 100% calc(100% - 32%), calc(100% - 8%) 100%, 0 100%);
      width: 110%;
      height: 84%
      top: 0
      left: -5%;
      +above($breakpoints.sm)
        height: 81%
        top: 4%;
    &:after
      content: ""
      position: absolute
      z-index -2
      background-color #153EFF
      clip-path: polygon(0 0, 100% 0, 100% calc(100% - 32%), calc(100% - 8%) 100%, 0 100%);
      width: 110%
      height: 84%;
      top: 6%
      left: -3%
      +above($breakpoints.sm)
        height: 81%;
        top: 10%

  &__form
    width 100%
    display: flex
    flex-direction: column
    align-items: center
    gap: 5px
    margin-top 15px
    +above($breakpoints.sm)
      width 556px
      flex-direction: row
      flex-wrap: wrap
      gap: 6px
      margin-top 20px
    +above($breakpoints.md)
      gap: 7px
      margin-top 25px
    +above($breakpoints.xxl)
      gap: 8px
      margin-top 27px
    & > *
      width 280px !important
      +above($breakpoints.sm)
        width 190px !important
      +above($breakpoints.md)
        width 230px !important
      +above($breakpoints.xxl)
        width 274px !important

  &__agree-wrapper
    +above($breakpoints.sm)
      padding-left 15px
    +above($breakpoints.md)
      padding-left 20px
    +above($breakpoints.xxl)
      padding-left 26px

  &__img
    width: 240px;
    height: auto;
    margin: 10px 0 0 43px;
    +above($breakpoints.sm)
      margin 0
      position: absolute
      z-index -1
      width: 520px;
      bottom: 0;
      right: -130px;
    +above($breakpoints.md)
      width: 675px;
      right: -164px;
    +above($breakpoints.xxl)
      width 891px
      right: -228px
